<%= form_for(@user, url: admin_user_path(@user), html: { method: :put }) do |f| %>
<!-- Modal -->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateUserModalLabel"><%= @user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <p>管理員： 
          <!-- <p><%= f.text_field :admin, class: "form-control" %></p> -->
          <%= f.radio_button :admin, "true", checked: @user.admin?, data: { question: 'What is your average class size?' } %>
          <%= f.label :admin, "Yes" %>
          <%= f.radio_button :admin, "false", checked: @user.admin?, data: { question: 'How many kids do you teach?' } %>
          <%= f.label :admin, "No"  %></p>
          <%= f.submit '送出', class: "btn btn-block btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
