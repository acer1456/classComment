<style media="screen">
  span{
    color: #575757;
  }
</style>

<!-- <p id="notice"><%= notice %></p> -->

<!-- Modal -->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= @user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <p><b>圖片:</b><img src="<%= @user.image %>" width="50px" height="50px"></p>
        <p><b>信箱:</b><span><%= @user.email %></span></p>
          <hr>
        <strong>最後登入:</strong>&emsp;<span><%= @user.last_sign_in_at %></span><br>
        <strong>登入次數:</strong>&emsp;<span><%= @user.sign_in_count %></span><br>
        <strong>最後ip:</strong>&emsp;<span><%= @user.last_sign_in_ip %></span><br>
        <strong>註冊於:</strong>&emsp;<span><%= @user.created_at %></span><br>
          <hr>
        <p><b>管理員:</b><span><%= @user.admin %></span></p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">關閉</button>
      </div>
    </div>
  </div>
