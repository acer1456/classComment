<style media="screen">
  b, strong{
    font-size: 15px;
  }
  span{
    color: #EEEEEE;
  }
  .span2{
    color: #000;
  }
</style>

<!-- <p id="notice"><%= notice %></p> -->

<!-- Modal -->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" style="background-color:#353A3F; color:#fff">
        <h5 class="modal-title" id="exampleModalLabel"><%= @user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <p><b>圖片：</b><img src="<%= @user.image %>" width="50px" height="50px">&emsp;&emsp;
        <b>信箱：</b><span  class="span2"><%= @user.email %></span></p>

      </div>
      <div class="modal-body" style="background-color:#353A3F; color:#fff">

        <strong>註冊於:</strong>&emsp;<span><%= @user.created_at %></span><br>
        <strong>登入次數:</strong>&emsp;<span><%= @user.sign_in_count %></span><br>
        <strong>最後ip:</strong>&emsp;<span><%= @user.last_sign_in_ip %></span><br>
        <strong>最後登入:</strong>&emsp;<span><%= @user.last_sign_in_at %></span><br>

      </div>
      <div class="modal-body">
        <p><b>管理員：</b>
          <% if @user.admin == true %>
          <b style="color:green">YES</b>
        <% else %>
          <span style="color:red">NO</span>
        <% end %>
        </p>
      </div>
    </div>
  </div>
