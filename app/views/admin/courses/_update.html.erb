<style media="screen">
  span{
    color: #575757;
  }
</style>

<!-- <p id="notice"><%= notice %></p> -->
<%= form_for(@course, url: admin_course_path(@course), html: { method: :put }) do |f| %>
<!-- Modal -->
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= @course.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">


        <form>

                <p>課程名稱</p>
                <div><%= f.text_field :name, autofocus: true, type: "text", class: "form-control", placeholder:"資訊素養 (拜託請打全名謝謝)" %></div>

                <br />

            <div class="row">
                <div class="col-6">
                  <p>學期</p>
                  <div><%= f.select 'semester', options_for_select(["102-1", "102-2", "103-1", "103-2", "104-1", "104-2", "105-1", "105-2", "106-1"], @course.semester), {}, :class => 'form-control' %></div>
                </div>
                <div class="col-6">
                  <p>類別</p>
                  <div><%= f.select 'category', options_for_select(["通識-文藝", "通識-史哲", "通識-自然", "通識-社科", "校際必修", "體育", "資管系", "財金系", "行管系", "觀光系", "經濟系", "企管系", "社心系", "英文系", "中文系", "日文系", "法律系", "新聞系", "口傳系", "公廣系", "資傳系", "圖傳系", "廣電系", "數媒系", "傳管系"], @course.category), {}, :class => 'form-control' %>
                  </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-7">
                  <p>課程老師</p>
                  <div><%= f.text_field :teacher, autofocus: true, type: "text", class: "form-control", placeholder:"你記得是誰吧？" %></div>
                </div>
                <div class="col-5">
                  <p>打幾顆 <i class="fa fa-star" style="color: #FDD835"></i> ？</p>
                  <div><%= f.select 'vote', options_for_select(["1", "2", "3", "4", "5"], @course.vote), {}, :class => 'form-control' %></div>
                </div>
            </div>

            <br />

                <p>心得感想</p>
                <div><%= f.text_area :comment, autofocus: true, class: "form-control", rows:"5", placeholder:"這堂課你有什麼感想？ 好玩嗎？ 學很多嗎？ 好過嗎？" %></div>

            <br />

                <p>上課方式</p>
                <div><%= f.text_area :detail, autofocus: true, class: "form-control", rows:"5", placeholder:"老師有沒有什麼固定的上課習慣跟規定呢？" %></div>

            <br />

                <p>作業考試 / 算分方式</p>
                <div><%= f.text_area :exam, autofocus: true, class: "form-control", rows:"5", placeholder:"有無作業 / 考試考多少次 / 如何算分" %></div>

      </div>

        </form>

      </div>

      <div class="modal-footer">
        <%= f.submit '送出', class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
