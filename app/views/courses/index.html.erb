<div class="row">


<div class="col-md-3">
    <div class="alert" role="alert" style="background-color: #DADADA">
<%= form_tag(courses_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "搜尋課程",  class: "form-control"%>
<%= submit_tag "搜尋", class: "btn btn-block btn-info" %>
<% end %>
    </div>
</div>

<div class="col-md-9 responsive">
  <table class="table table-sm table-hover" >
    <thead >
      <tr>
        <th>課程</th>
        <th>學期</th>
        <th>類別</th>
        <th>老師</th>
        <!-- <th>心得</th> -->
        <th>整體評價</th>
        <!-- <th>發表於</th> -->
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.semester %></td>
        <td><%= course.category %></td>
        <td><%= course.teacher %></td>
        <!-- <td><%= course.comment %></td> -->
        <!-- <td><i class="fa fa-times fa-lg" style="color: black"></i> </td>
        <td><i class="fa fa-check fa-lg" style="color: green"></i> </td> -->

        <!-- <td><%= course.vote %>.0 <i class="fa fa-star fa-lg" style="color: #FDD835"></i> </td> -->
        <td><% course.vote.times do %><i class="fa fa-star" style="color: #FDD835"></i><% end %></td>
        <!-- <td><%= time_ago_in_words(course.created_at) %></td> -->
        <!-- <td><%= link_to "詳細", course, class: "btn btn-sm btn-info" %></td> -->

        <td><%= link_to "詳細", course_path(course), :remote => true, data: {toggle: "modal", target: "#myModal"}, class:"btn btn-sm btn-info" %></td>

      </tr>
        <% end %>
    </tbody>
  </table>
</div>
