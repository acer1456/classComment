<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div align="left">

        <form class="form-signin">

          <div class="col-sm-10">
            <div class="col-md-5">
          <%= f.label :課程名稱 %><br>
          <%= f.text_field :name, autofocus: true, type: "text", class: "form-control" %>
            </div>
          <br />
            <div class="col-md-5">
          <%= f.label :學期 %><br>
          <%= f.text_field :semester, autofocus: true, type: "text", class: "form-control" %>
            </div>
          </div>
          <br />

          <%= f.label :類別 %><br>
          <%= f.text_field :category, autofocus: true, type: "text", class: "form-control" %>

          <br />

          <%= f.label :課程老師 %><br>
          <%= f.text_field :teacher, autofocus: true, type: "text", class: "form-control" %>

          <br />

          <%= f.label :心得建議 %><br>
          <%= f.text_area :comment, autofocus: true, class: "form-control" %>

          <br />

          <%= f.label :上課內容 %><br>
          <%= f.text_area :detail, autofocus: true, class: "form-control" %>

          <br />

          <%= f.label :作業考試 %><br>
          <%= f.text_area :exam, autofocus: true, class: "form-control" %>

          <br />

          <%= f.label :幾顆星 %><br>
          <%= f.number_field :vote, autofocus: true, class: "form-control" %>

          <br />

          <%= f.submit '送出', class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </form>
