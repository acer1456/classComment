<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div align="left">

        <form class="form-signin">

          <div class="row">
            <div class="col-md-3">
          <%= f.label :課程名稱 %><br>
          <%= f.text_field :name, autofocus: true, type: "text", class: "form-control" %>
            </div>

          <br />

            <div class="col-md-3">
                <%= f.label :學期 %><br>
                <%= f.select 'semester', options_for_select(["102-1", "102-2", "103-1", "103-2", "104-1", "104-2", "105-1", "105-2"], select: "105-1"), {}, :class => 'form-control' %>
            </div>




          <br />
            <div class="col-md-3">
          <%= f.label :類別 %><br>
          <%= f.select 'category', options_for_select(["通識-文學藝術", "通識-史哲學科", "通識-自然學科", "通識-社會科學" , "校際必修", "體育", "資管系", "財金系", "行管系", "觀光系", "經濟系", "企管系",  "社心系", "英文系",  "中文系",  "日文系",  "法律系", "新聞系", "口傳系", "公廣系", "資傳系", "圖傳系", "廣電系", "數媒系", "傳管系"], "傳管系"), {}, :class => 'form-control' %>
            </div>

          <br />

            <div class="col-md-3">
          <%= f.label :課程老師 %><br>
          <%= f.text_field :teacher, autofocus: true, type: "text", class: "form-control" %>
            </div>
          </div>

          <br />
          <hr>
          <br />

          <div class="row">
            <div class="col-md-6">
          <%= f.label :心得建議 %><br>
          <%= f.text_area :comment, autofocus: true, class: "form-control" %>
            </div>


          <br />
            <div class="col-md-6">
          <%= f.label :上課內容 %><br>
          <%= f.text_area :detail, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <br />
          <hr>
          <br />

          <%= f.label :作業考試 %><br>
          <%= f.text_area :exam, autofocus: true, class: "form-control" %>

          <br />
          <hr>
          <br />

          <%= f.label :幾顆星 %><br>
          <%= f.number_field :vote, autofocus: true, class: "form-control" %>

          <br />

          <%= f.submit '送出', class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </form>
      </div>
