
<div align="left">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <form class="form-signin">

        <%= f.label :帳號 %><br />
        <%= f.email_field :email, autofocus: true, type: "email", class: "form-control" %>
        <br />
        <%= f.label :密碼 %><br />
        <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control" %>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :記得我 %>
          </div>
        <% end -%>

        <%= f.submit "登入", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </form>
  <hr>
  <%= render "devise/shared/links" %>
</div>
