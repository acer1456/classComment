
<div align="left">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <form class="form-signin">

        <%= f.label :帳號 %><br />
        <%= f.email_field :email, autofocus: true, type: "email", class: "form-control" %>
        <br />

        <%= f.label :密碼 %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control" %>

        <br />

        <%= f.label :確認密碼 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", type: "password", class: "form-control" %>

        <br />

        <%= f.submit "註冊", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </form>
  <hr>
  <%= render "devise/shared/links" %>
</div>
